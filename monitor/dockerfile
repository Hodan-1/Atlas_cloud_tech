# Dockerfile for benchmark
FROM python:3.10

WORKDIR /app

# Install dependencies
RUN pip install psutil matplotlib pandas numpy 

# Copy the common module (if needed by your benchmark)
COPY common /app/common

# Copy the benchmark scripts
COPY cpu_monitor.py /app/
COPY benchmark.py /app/

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command
CMD ["python", "/app/benchmark.py"]
